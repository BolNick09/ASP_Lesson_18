@page
@model ASP_Lesson_18.Pages.ProductCategories.CreateModel
@{
    ViewData["Title"] = "Добавить категорию";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductCategory.Name" class="control-label"></label>
                <input asp-for="ProductCategory.Name" class="form-control" />
                <span asp-validation-for="ProductCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>