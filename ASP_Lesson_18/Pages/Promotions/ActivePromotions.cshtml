@page
@model ASP_Lesson_18.Pages.Promotions.ActivePromotionsModel
@{
    ViewData["Title"] = "Активные акционные предложения";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Категория</th>
            <th>Страна</th>
            <th>Дата окончания</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ActivePromotions)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductCategory.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Подробности</a>
                </td>
            </tr>
        }
    </tbody>
</table>