@page
@model ASP_Lesson_18.Pages.Promotions.EditModel
@{
    ViewData["Title"] = "Редактировать акционное предложение";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Promotion.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Promotion.Name" class="control-label"></label>
                <input asp-for="Promotion.Name" class="form-control" />
                <span asp-validation-for="Promotion.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promotion.Description" class="control-label"></label>
                <textarea asp-for="Promotion.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Promotion.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promotion.StartDate" class="control-label"></label>
                <input asp-for="Promotion.StartDate" type="date" class="form-control" />
                <span asp-validation-for="Promotion.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promotion.EndDate" class="control-label"></label>
                <input asp-for="Promotion.EndDate" type="date" class="form-control" />
                <span asp-validation-for="Promotion.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promotion.Country" class="control-label"></label>
                <input asp-for="Promotion.Country" class="form-control" />
                <span asp-validation-for="Promotion.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promotion.ProductCategoryId" class="control-label"></label>
                <select asp-for="Promotion.ProductCategoryId" class="form-control"
                        asp-items="ViewBag.ProductCategories"></select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>